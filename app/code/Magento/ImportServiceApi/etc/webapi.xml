<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/import/:uuid" method="GET">
        <service class="Magento\ImportServiceApi\Api\ImportStatusInterface" method="execute"/>
        <resources>
            <resource ref="Magento_ImportServiceApi::import" />
        </resources>
    </route>
    <route url="/V1/import/start/:uuid" method="POST">
        <service class="Magento\ImportServiceApi\Api\ImportStartInterface" method="execute"/>
        <resources>
            <resource ref="Magento_ImportService::import" />
        </resources>
    </route>
    <route url="/V1/import/operation-id/:uuid" method="PUT">
        <service class="Magento\ImportServiceApi\Api\ImportRestartOperationInterface" method="execute"/>
        <resources>
            <resource ref="Magento_ImportServiceApi::import" />
        </resources>
    </route>
    <route url="/V1/import/sources" method="GET">
        <service class="Magento\ImportServiceApi\Api\SourceRepositoryInterface" method="getList"/>
		<resources>
            <resource ref="Magento_ImportServiceApi::import" />
        </resources>
    </route>
    <route url="/V1/import/source/:uuid" method="DELETE">
        <service class="Magento\ImportServiceApi\Api\SourceRepositoryInterface" method="deleteByUuid"/>
        <resources>
            <resource ref="Magento_ImportServiceApi::import" />
        </resources>
    </route>
</routes>
